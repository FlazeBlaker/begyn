rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection: Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Allow access to subcollections (like history)
      match /{document=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // Brands collection: Users can read/write their own brand data
    match /brands/{userId} {
      allow read: if isOwner(userId);
      
      // Allow updates ONLY if credits and creditsUsed are NOT modified
      // This prevents users from hacking their own credits via the console
      allow update: if isOwner(userId) 
                    && request.resource.data.credits == resource.data.credits
                    && request.resource.data.creditsUsed == resource.data.creditsUsed;
      
      // Deny create/delete (managed by backend)
      allow create, delete: if false;
      
      // Allow access to subcollections (like payments) - Read Only for client
      match /{document=**} {
        allow read: if isOwner(userId);
        allow write: if false;
      }
    }

    // Chats collection: Users can read/write their own chats
    match /chats/{chatId} {
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.uid == request.auth.uid;
    }
  }
}
